{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "TechTicker.PriceHistoryService": "Debug"
    }
  },
  "RabbitMQ": {
    "PricePointRecordedExchange": "price-point-recorded",
    "PriceHistoryQueue": "price-history-queue",
    "PricePointRecordedRoutingKey": "price.point.recorded"
  },
  "OpenIddictAuthentication": {
    "AuthorizationServerUrl": "https://localhost:7001",
    "Audience": "techticker-api",
    "RequireHttpsMetadata": false,
    "EnableIntrospection": false
  },
  "AuthorizationPolicies": {
    "RequireAuthenticatedUserByDefault": true,
    "DefaultScheme": "OpenIddict",
    "Policies": {
      "PriceHistoryRead": {
        "RequiredRoles": ["User", "Admin"],
        "RequiredScopes": ["read"]
      },
      "PriceHistoryAnalysis": {
        "RequiredRoles": ["Admin"],
        "RequiredScopes": ["read", "analytics"]
      }
    }
  }
}
