@TechTicker.ProductService_HostAddress = http://localhost:5074

### Create a new product
POST {{TechTicker.ProductService_HostAddress}}/api/products
Content-Type: application/json
X-Correlation-ID: {{$guid}}

{
  "name": "Nvidia RTX 4070 Ti FE",
  "manufacturer": "Nvidia",
  "modelNumber": "PG141-SKU331",
  "sku": "NV-RTX4070TI-FE-001",
  "categoryId": "{{$guid}}",
  "description": "High-performance graphics card for gaming and content creation",
  "specifications": {
    "memory": "12GB GDDR6X",
    "coreClock": "2310 MHz",
    "memoryClock": "21000 MHz",
    "memoryInterface": "192-bit",
    "maxResolution": "7680x4320",
    "ports": ["3x DisplayPort 1.4a", "1x HDMI 2.1"],
    "powerConsumption": "285W",
    "recommendedPSU": "700W"
  },
  "isActive": true
}

### Get all products
GET {{TechTicker.ProductService_HostAddress}}/api/products
X-Correlation-ID: {{$guid}}

### Get products with search and pagination
GET {{TechTicker.ProductService_HostAddress}}/api/products?search=nvidia&pageNumber=1&pageSize=10
X-Correlation-ID: {{$guid}}

### Get products by category (using category ID)
GET {{TechTicker.ProductService_HostAddress}}/api/products?categoryId={{$guid}}
X-Correlation-ID: {{$guid}}

### Get products by category (using category slug)
GET {{TechTicker.ProductService_HostAddress}}/api/products?categoryId=graphics-cards
X-Correlation-ID: {{$guid}}

### Get active products only
GET {{TechTicker.ProductService_HostAddress}}/api/products?isActive=true
X-Correlation-ID: {{$guid}}

### Get product by ID
GET {{TechTicker.ProductService_HostAddress}}/api/products/{{$guid}}
X-Correlation-ID: {{$guid}}

### Check if product exists
HEAD {{TechTicker.ProductService_HostAddress}}/api/products/{{$guid}}
X-Correlation-ID: {{$guid}}

### Check if product exists (alternative endpoint)
GET {{TechTicker.ProductService_HostAddress}}/api/products/{{$guid}}/exists
X-Correlation-ID: {{$guid}}

### Update a product
PUT {{TechTicker.ProductService_HostAddress}}/api/products/{{$guid}}
Content-Type: application/json
X-Correlation-ID: {{$guid}}

{
  "name": "Nvidia RTX 4070 Ti Super FE",
  "manufacturer": "Nvidia",
  "modelNumber": "PG141-SKU332",
  "sku": "NV-RTX4070TISUPER-FE-001",
  "categoryId": "{{$guid}}",
  "description": "Enhanced high-performance graphics card for gaming and content creation",
  "specifications": {
    "memory": "16GB GDDR6X",
    "coreClock": "2340 MHz",
    "memoryClock": "21000 MHz",
    "memoryInterface": "256-bit",
    "maxResolution": "7680x4320",
    "ports": ["3x DisplayPort 1.4a", "1x HDMI 2.1"],
    "powerConsumption": "295W",
    "recommendedPSU": "750W"
  },
  "isActive": true
}

### Delete a product
DELETE {{TechTicker.ProductService_HostAddress}}/api/products/{{$guid}}
X-Correlation-ID: {{$guid}}

