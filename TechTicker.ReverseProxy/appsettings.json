{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Yarp": "Information",
      "TechTicker.ReverseProxy": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "https://localhost:7001",
    "Audience": "techticker-api",
    "SecretKey": "your-secret-key-here-make-it-very-long-and-secure"
  },
  "RateLimiting": {
    "DefaultPolicy": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "QueueLimit": 50
    }
  },
  "Cors": {
    "AllowedOrigins": [],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "AllowCredentials": true
  },
  "ReverseProxy": {
    "Routes": {
      "categories-route": {
        "ClusterId": "product-service",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "readonly",
        "Match": {
          "Path": "/api/v1/categories/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/categories/{**catch-all}"
          }
        ]
      },
      "products-route": {
        "ClusterId": "product-service",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "readonly",
        "Match": {
          "Path": "/api/v1/products/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/products/{**catch-all}"
          }
        ]
      },      "mappings-route": {
        "ClusterId": "product-seller-mapping-service",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "standard",
        "Match": {
          "Path": "/api/v1/mappings/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/mappings/{**catch-all}"
          }
        ]
      },
      "site-configs-route": {
        "ClusterId": "product-seller-mapping-service",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "standard",
        "Match": {
          "Path": "/api/v1/site-configs/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/site-configs/{**catch-all}"
          }
        ]
      },
      "auth-connect-route": {
        "ClusterId": "user-service",
        "RateLimiterPolicy": "auth",
        "Match": {
          "Path": "/api/v1/auth/connect/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/connect/{**catch-all}"
          }
        ]
      },
      "auth-legacy-route": {
        "ClusterId": "user-service",
        "RateLimiterPolicy": "auth",
        "Match": {
          "Path": "/connect/{**catch-all}"
        }
      },      "users-route": {
        "ClusterId": "user-service",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "standard",
        "Match": {
          "Path": "/api/v1/users/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/users/{**catch-all}"
          }
        ]
      },
      "prices-route": {
        "ClusterId": "price-history-service",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "readonly",
        "Match": {
          "Path": "/api/v1/prices/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/prices/{**catch-all}"
          }
        ]
      },      "alerts-route": {
        "ClusterId": "alert-definition-service",
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "standard",
        "Match": {
          "Path": "/api/v1/alerts/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/alerts/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "product-service": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://techticker-productservice"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "product-seller-mapping-service": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://techticker-productsellermappingservice"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "user-service": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://techticker-userservice"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "price-history-service": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://techticker-pricehistoryservice"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "alert-definition-service": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://techticker-alertdefinitionservice"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  }
}